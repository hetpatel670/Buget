<resources>
    <!-- Enhanced Button Styles with Modern Design -->
    <style name="Widget.BudgetWise.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>
    
    <style name="Widget.BudgetWise.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>
    
    <style name="Widget.BudgetWise.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Premium Card Styles with Glass Morphism -->
    <style name="Widget.BudgetWise.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">12dp</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">@drawable/ripple_effect_enhanced</item>
        <item name="android:stateListAnimator">@animator/card_state_list_animator_enhanced</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
    </style>
    
    <style name="Widget.BudgetWise.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">24dp</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">@drawable/ripple_effect_enhanced</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <!-- Glass Morphism Card Style -->
    <style name="Widget.BudgetWise.Card.Glass" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">@drawable/ripple_effect_glass</item>
        <item name="cardBackgroundColor">@color/glass_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_border_light</item>
    </style>

    <!-- Enhanced Text Styles with Better Typography -->
    <style name="TextAppearance.BudgetWise.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.BudgetWise.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.BudgetWise.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.BudgetWise.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <!-- Premium Amount Text Styles -->
    <style name="TextAppearance.BudgetWise.Amount" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:fontFeatureSettings">tnum</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.BudgetWise.Amount.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:fontFeatureSettings">tnum</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.BudgetWise.Amount.Small" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontFeatureSettings">tnum</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Enhanced Input Field Styles -->
    <style name="Widget.BudgetWise.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Enhanced Progress Bar Styles -->
    <style name="Widget.BudgetWise.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_height">16dp</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Gradient Progress Bar -->
    <style name="Widget.BudgetWise.ProgressBar.Gradient" parent="Widget.BudgetWise.ProgressBar">
        <item name="indicatorColor">@color/gradient_primary_start</item>
        <item name="android:progressDrawable">@drawable/progress_gradient_enhanced</item>
    </style>
    
    <!-- Enhanced Chip Styles -->
    <style name="Widget.BudgetWise.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorOutlineVariant</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Category Chip Style -->
    <style name="Widget.BudgetWise.Chip.Category" parent="Widget.BudgetWise.Chip">
        <item name="chipBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipIconTint">?attr/colorOnPrimaryContainer</item>
    </style>
    
    <!-- Enhanced Bottom Sheet Styles -->
    <style name="Widget.BudgetWise.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation">24dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BudgetWise.BottomSheet</item>
    </style>

    <!-- Bottom Sheet Shape -->
    <style name="ShapeAppearance.BudgetWise.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Enhanced Toolbar Styles -->
    <style name="Widget.BudgetWise.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.BudgetWise.Title</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@drawable/gradient_primary_horizontal</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>
    
    <!-- Enhanced FAB Styles -->
    <style name="Widget.BudgetWise.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@drawable/gradient_primary_circular</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">16dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BudgetWise.FAB</item>
        <item name="android:stateListAnimator">@animator/fab_state_list_animator</item>
    </style>

    <!-- FAB Shape -->
    <style name="ShapeAppearance.BudgetWise.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Extended FAB Style -->
    <style name="Widget.BudgetWise.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@drawable/gradient_primary_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="elevation">16dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BudgetWise.ExtendedFAB</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Extended FAB Shape -->
    <style name="ShapeAppearance.BudgetWise.ExtendedFAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Enhanced Interactive Card -->
    <style name="Widget.BudgetWise.Card.Interactive" parent="Widget.BudgetWise.Card">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/ripple_effect_enhanced</item>
        <item name="android:stateListAnimator">@animator/card_state_list_animator_enhanced</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Premium Dashboard Card -->
    <style name="Widget.BudgetWise.Card.Dashboard" parent="Widget.BudgetWise.Card.Interactive">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:background">@drawable/gradient_card_background</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Balance Card Style -->
    <style name="Widget.BudgetWise.Card.Balance" parent="Widget.BudgetWise.Card.Dashboard">
        <item name="android:background">@drawable/gradient_primary_diagonal</item>
        <item name="cardElevation">20dp</item>
    </style>

    <!-- Navigation Style -->
    <style name="Widget.BudgetWise.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.BudgetWise.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">16dp</item>
        <item name="itemRippleColor">?attr/colorPrimary</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.BudgetWise.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorPrimary</item>
        <item name="trackTint">?attr/colorPrimaryContainer</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Divider Style -->
    <style name="Widget.BudgetWise.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
</resources>